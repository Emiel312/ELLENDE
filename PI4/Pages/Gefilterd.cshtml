@page
@model PI4.Pages.GefilterdModel
@using PI4.Models
@{
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title>Self-Defence with Jo Bonten</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/Index">🥷🏻 Home 🥷🏻</a>
            <a class="navbar-brand" href="/Onderwerpen">🥋 Wat wil je leren? 🥋</a>
            <a class="navbar-brand" href="/YouTubeLinks">🥊 Alle Instructie video's 🥊</a>
        </nav>

    </header>

    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h1>Bijhorende video's bij onderwerp: "@Model.Onderwerp?.Omschrijving"</h1>
                <br />
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Video Titel</th>
                <th>Video Link</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Onderwerp?.Videos?.Any() ?? false)
            {
                @foreach (var rij in Model.Onderwerp.Videos ?? Enumerable.Empty<Video>())
            
                {
                    <tr>
                        <td class="align-middle">@rij.Titel</td>
                        <td class="align-middle"><iframe allowfullscreen width="300" height="150" src="@rij.Link"></iframe></td>
                    </tr>
                }
            }
            else
            {
                <tr style="color:red">
                    <td>Niks om weer te geven...</td>
                    <td>Niks om weer te geven...</td>
                </tr>
            }
            
        </tbody>
    </table>
        
</body>