@page "{handler?}/{id?}"
@model PI4.Pages.OnderwerpenModel
@{
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title>Self-Defence with Jo Bonten</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/Index">🥷🏻 Home 🥷🏻</a>
            <a class="navbar-brand" href="/Onderwerpen">🥋 Wat wil je leren? 🥋</a>
            <a class="navbar-brand" href="/YouTubeLinks">🥊 Alle Instructie video's 🥊</a>
        </nav>

    </header>

    <div class="col text-center">
        <h1> 🥋 Onderwerpen  🥋 </h1>
        <form method="post">
            <td class="form-group">
                <label for="Onderw_Omschrijving">Voeg nieuw Onderwerp toe </label>
                <input asp-for="Onderw.Omschrijving" type="text" data-val="true" data-val-required="Vul een nieuw onderwerp in." id="Onderw_Omschrijving" name="Onderw.Omschrijving" />
                <input class="btn btn-primary" type="submit" value="Sla op">
            </td>
            <td><span asp-validation-for="Onderw.Omschrijving" style="color:red"></span></td>
        </form>
    </div>

    </>

    <table class="table">
        <thead>
            <tr>
                <th><a asp-route-sortOrder="@Model.OmschrijvingSort">Omschrijving</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rij in Model.onderwerpen)
            {
                <tr>
                    <td class="align-middle">@rij.Omschrijving</td>
                    <td><a class="btn btn-primary" href="/Gefilterd">Toon</a></td>
                    <td><a class="btn btn-danger" asp-route-id="@rij.OnderwerpId" asp-page-handler="Delete">Verwijder</a></td>
                </tr>
            }
        </tbody>
    </table>



</body>