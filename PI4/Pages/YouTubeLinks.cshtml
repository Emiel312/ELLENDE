@page
@model PI4.Pages.YouTubeLinksModel
@{
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title>Self-Defence with Jo Bonten</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/Index">🥷🏻 Home 🥷🏻</a>
            <a class="navbar-brand" href="/Onderwerpen">🥋 Wat wil je leren? 🥋</a>
            <a class="navbar-brand" href="/YouTubeLinks">🥊 Alle Instructie video's 🥊</a>
        </nav>

    </header>

    <div class="container">
    <div class="row">
        <div class="col text-center">
            <h1> 🥊 Instructie video's  🥊 </h1>
            <form>
                <div class ="form-group">
                    <input type="text" asp-for="SearchString" class="align-middle" style="width:200px" />
                    <input type="submit" value="Zoek" class="btn btn-primary" />
                    <span asp-validation-for="SearchString" style="color:red; font-weight:900"></span>
                </div>
            </form>
        </div>
    </div>
</div>


    <table class="table">
        <tr>
            <th><a asp-route-sortOrder="@Model.TitelSort">Titel</a></th>
            <th>Link</th>
        </tr>
        @foreach (var titel in Model.videos)
        {
            <tr>
                <td>@titel.Titel</td>
                <td class="align-middle embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="@titel.Link" allowfullscreen=""></iframe></td>
                <td class="align-middle"><a class="btn btn-primary" asp-page="/Details" asp-route-id="@titel.VideoId">Bewerk</a></td>
            </tr>
        }
    </table>


    </body>
